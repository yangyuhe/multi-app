    "outDir": "./dist/",
    "noImplicitAny": false,
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src"
  ]
}
